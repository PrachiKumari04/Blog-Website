<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Blog</title>
</head>
<body>
    <header>
        <div class="banner-container">
            <img src="/image/banner4-Photoroom.png" alt="Blog Banner" class="banner">
            <nav class="navbar navbar-expand-lg fixed-top">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/posts/new">New Post</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main class="container mt-5 pt-5">
        <div class="row">
            <% posts.forEach(post => { %>
                <div class="col-md-6 mb-4">
                    <article class="bg-dark p-3 rounded h-100">
                        <h2><a href="/post/<%= post._id %>" class="text-light"><%= post.title %></a></h2>
                        <p class="text-light"><%= post.content.substring(0, 200) %>...</p>
                        <time class="text-muted"><%= post.created_at.toDateString() %></time>
                    </article>
                </div>
            <% }) %>
        </div>
    </main>
    <footer>
        <div class="container text-center">
            <p>&copy; 2024 Echoes of Expression. All rights reserved.</p>
            <p>Follow us on 
                <a class="text-light" href="#">Twitter</a>, 
                <a class="text-light" href="#">Facebook</a>, 
                <a class="text-light" href="#">Instagram</a>
            </p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
